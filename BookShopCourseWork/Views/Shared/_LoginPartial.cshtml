@using Microsoft.AspNetCore.Identity
@using BookShopCourseWork.Extensions;
@using BookShopCourseWork.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item"><a class="nav-link text-primary" asp-controller="Order" asp-action="Cart"><i class="fas fa-shopping-cart text-primary fa-2x"></i></a></li>
    <li class="nav-item">
        <a  class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @(User.FindFirst("FirstName").Value + " " + User.FindFirst("LastName").Value ) <i class="fas fa-smile"></i></a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-primary"><i class="fas fa-sign-out-alt"></i> Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
