@{
    ViewData["Title"] = "Finish order";
}
<script>
    if(getCookie("cart") == "")
    {
        window.location.href = "/";
    }
    else
    {
        let cart = JSON.parse(getCookie("cart"));
        if(cart.length==0)
        {
            window.location.href = "/";
        }
    }
</script>
<div class="col-md-4">
    <h4>Finish order</h4>
    <hr />
    <div class="form-group">
        <label for="address">Address</label>
        <input id="address" class="form-control" />
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input id="city" class="form-control" />
    </div>
    <div class="form-group">
        <label for="phoneNumber">Phone number</label>
        <input id="phoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label for="notes">Notes</label>
        <textarea maxlength="200" id="notes" class="form-control" style="width: 300px; height: 200px; resize: none;"></textarea>
    </div>
    <button class="btn btn-primary mt-4" onclick="finishOrder()">Create order</button>
</div>