@{
    ViewData["ActivePage"] = "UpdateAuthorBook";
    ViewData["ActiveTab"] = "Authors";
}
@using BookShopCourseWork.Models.AuthorController
@model UpdateAuthorBook
<div class="mt-3 mr-3 ml-3">
    <h4>Add author and book</h4>
    <hr>
    <form asp-controller="Author" asp-action="UpdateAuthorBook">
        <div class="row">
            <div class="col">
                <label asp-for="BookId" ></label>
                <input type="text" asp-for="BookId" class="form-control">
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="AuthorId" ></label>
                <input type="text" asp-for="AuthorId" class="form-control">
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col">
                <label asp-for="Operation" ></label>
                <select type="text" asp-for="Operation" class="form-control">
                    <option value="addAuthor">Add author to book</option>
                    <option value="removeAuthor">Disconnect author and book</option>
                </select>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Update author and book</button>
            </div>
        </div>        
    </form>

</div>