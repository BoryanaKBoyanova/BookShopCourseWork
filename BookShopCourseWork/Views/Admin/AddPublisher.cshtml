@{
    ViewData["ActivePage"] = "AddPublisher";
    ViewData["ActiveTab"] = "Publishers";
}
@using BookShopCourseWork.Models.PublisherController
@model AddPublisher
<div class="mt-3 mr-3 ml-3 mb-3">
    <h4>Add publisher</h4>
    <hr>
    <form asp-controller="Publisher" asp-action="AddPublisher">
        <div class="row">
            <div class="col">
                <label asp-for="PublisherName"></label>
                <input type="text" asp-for="PublisherName" class="form-control">
                <span asp-validation-for="PublisherName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Add publisher</button>
            </div>
        </div>
    </form>
</div>