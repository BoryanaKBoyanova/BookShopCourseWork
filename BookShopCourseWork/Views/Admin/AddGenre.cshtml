@{
    ViewData["ActivePage"] = "AddGenre";
    ViewData["ActiveTab"] = "Genres";
}
@using BookShopCourseWork.Models.GenreController
@model AddGenre
<div class="mt-3 mr-3 ml-3 mb-3">
    <h4>Add genre</h4>
    <hr>
    <form asp-controller="Genre" asp-action="AddGenre">
        <div class="row">
            <div class="col">
                <label asp-for="GenreName"></label>
                <input type="text" asp-for="GenreName" class="form-control">
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Add genre</button>
            </div>
        </div>
    </form>
</div>