@{
    ViewData["ActivePage"] = "UpdatePublisherBook";
    ViewData["ActiveTab"] = "Publishers";
}
@using BookShopCourseWork.Models.PublisherController
@model UpdatePublisherBook
<div class="mt-3 mr-3 ml-3">
    <h4>Update publisher and book</h4>
    <hr>
    <form asp-controller="Publisher" asp-action="UpdatePublisherBook">
        <div class="row">
            <div class="col">
                <label asp-for="BookId" ></label>
                <input type="number" asp-for="BookId" class="form-control">
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="PublisherId" ></label>
                <input type="number" asp-for="PublisherId" class="form-control">
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Update publisher and book</button>
            </div>
        </div>        
    </form>
</div>