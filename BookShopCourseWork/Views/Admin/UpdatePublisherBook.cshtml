@{
    ViewData["ActivePage"] = "UpdatePublisherBook";
    ViewData["ActiveTab"] = "Publishers";
}
@using BookShopCourseWork.Models.PublisherController
@model UpdatePublisherBook
<div class="mt-3 mr-3 ml-3">
    <h4>Add author and book</h4>
    <hr>
    <form asp-controller="Publisher" asp-action="UpdatePublisherBook">
        <div class="row">
            <div class="col">
                <label asp-for="BookId" ></label>
                <input type="text" asp-for="BookId" class="form-control">
            </div>
            <div class="col">
                <label asp-for="PublisherId" ></label>
                <input type="text" asp-for="PublisherId" class="form-control">
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col">
                <label asp-for="Operation" ></label>
                <select type="text" asp-for="Operation" class="form-control">
                    <option value="addPublisher">Add publisher to book</option>
                    <option value="removePublisher">Disconnect publisher and book</option>
                </select>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Update author and book</button>
            </div>
        </div>        
    </form>
</div>