@{
    ViewData["ActivePage"] = "UpdateGenreBook";
    ViewData["ActiveTab"] = "Genres";
}
@using BookShopCourseWork.Models.GenreController
@model UpdateGenreBook
<div class="mt-3 mr-3 ml-3">
    <h4>Update genre and book</h4>
    <hr>
    <form asp-controller="Genre" asp-action="UpdateGenreBook">
        <div class="row">
            <div class="col">
                <label asp-for="BookId" ></label>
                <input type="number" asp-for="BookId" class="form-control">
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="GenreId" ></label>
                <input type="number" asp-for="GenreId" class="form-control">
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col">
                <label asp-for="Operation" ></label>
                <select type="text" asp-for="Operation" class="form-control">
                    <option value="addGenre">Add genre to book</option>
                    <option value="removeGenre">Disconnect genre and book</option>
                </select>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Update genre and book</button>
            </div>
        </div>        
    </form>
</div>