@using BookShopCourseWork.Models
@{
    ViewData["ActiveTab"] = "Authors";
    ViewData["ActivePage"] = "ViewAllAuthors";
}
@model List<Author>
<div class="mt-3 ml-3 mb-3 mr-3">
    <h4>View all authors</h4>
    <hr>
     <table class="table table-striped table-primary">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Author full name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Author a in Model)
                {
                    <tr><td>@a.Id</td><td>@a.FirstName @a.LastName</td></tr>
                }
            </tbody>

        </table>
</div>