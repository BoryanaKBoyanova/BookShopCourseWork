@using BookShopCourseWork.Models.AuthorController
@model DeleteAuthor
@{
    ViewData["ActiveTab"] = "Authors";
    ViewData["ActivePage"] = "DeleteAuthor";
}
<div class="mt-3 mb-3 ml-4 mr-3">
    <h4>Delete author</h4>
    <hr>
    <form asp-controller="Author" asp-action="DeleteAuthor">
        <div class="row">
            <div class="col">
                <label asp-for="AuthorId"></label>  
                <input type="number" class="form-control" asp-for="AuthorId">
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Delete author</button>
            </div>
        </div>
    </form>

</div>