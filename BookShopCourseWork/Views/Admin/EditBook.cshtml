@model BookShopCourseWork.Models.BookController.EditBook;
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Edit book";
    ViewData["ActivePage"] = "EditBook";
    ViewData["ActiveTab"] = "Books";
}
<div class="mt-3 ml-3 mr-3 mb-3">
    <h4>Edit book</h4>
    <hr>
    <form asp-controller="Book" asp-action="EditBook">
        <div class="row">
            <div class="col">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" type="text">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" type="text">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" style="resize: none;" rows="16" maxlength="3000"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="Price"></label>
                <input class="form-control" type="text" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="ImgUrl"></label>
                <input class="form-control" type="text" asp-for="ImgUrl">
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
        </div>
        <button class="btn btn-primary mt-3" type="submit">Edit book</button>
    </form>

</div>